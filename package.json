{
  "name": "angular2-full-stack",
  "version": "20.0.4",
  "license": "MIT",
  "author": "Davide Violante",
  "description": "Angular Full Stack project built using Angular 2+, Express, Mongoose and Node.",
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "scripts": {
    "ng": "ng",
    "build:dev": "ng build -c development && tsc -p server",
    "build": "ng build && tsc -p server",
    "start": "node dist/server/app.js",
    "predev": "tsc -p server",
    "dev": "concurrently \"mongod\" \"ng serve --open\" \"tsc -w -p server\" \"nodemon dist/server/app.js\"",
    "prod": "concurrently \"mongod\" \"ng build && tsc -p server && node dist/server/app.js\"",
    "test": "ng test",
    "test:be": "tsc -p server && jest",
    "test:becov": "tsc -p server && jest --coverage",
    "lint": "ng lint && htmlhint \"client/**/*.html\" && sass-lint \"client/**/*.scss\" -v",
    "lint:fix": "ng lint --fix",
    "prepare": "husky || true"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.0.4",
    "@angular/common": "^20.0.4",
    "@angular/compiler": "^20.0.4",
    "@angular/core": "^20.0.4",
    "@angular/forms": "^20.0.4",
    "@angular/platform-browser": "^20.0.4",
    "@angular/platform-browser-dynamic": "^20.0.4",
    "@angular/router": "^20.0.4",
    "@auth0/angular-jwt": "^5.2.0",
    "bcryptjs": "^2.4.3",
    "bootstrap": "^5.3.7",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "font-awesome": "^4.7.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.0",
    "morgan": "^1.10.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.0.3",
    "@angular/cli": "^20.0.3",
    "@angular/compiler-cli": "^20.0.4",
    "@angular/language-service": "^20.0.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.23",
    "@types/jasmine": "~5.1.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.15.29",
    "@types/supertest": "^6.0.3",
    "angular-eslint": "20.1.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.28.0",
    "htmlhint": "^1.6.3",
    "husky": "^9.1.7",
    "jasmine-core": "~5.2.0",
    "jest": "^29.7.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "nodemon": "^3.1.10",
    "sass-lint": "^1.13.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.33.1"
  }
}
